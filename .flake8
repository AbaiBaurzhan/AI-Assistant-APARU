[flake8]
max-line-length = 88
extend-ignore = E203,W503,D100,D101,D102,D103,D104,D105
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:D104
    tests/*:D100,D101,D102,D103
import-order-style = google
application-import-names = app
